{
  "name": "sol-lsp",
  "displayName": "Sol Language",
  "description": "",
  "version": "0.0.1",
  "main": "client/out/client",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/CriusNyx/sol"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "activationEvents": [
    "onLanguage:sol"
  ],
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sol",
        "aliases": [
          "sol",
          "sol"
        ],
        "extensions": [
          ".sol"
        ]
      }
    ]
  },
  "scripts": {
    "postinstall": "(cd client; yarn install); (cd server; yarn install)",
    "deps": "ts-node ./src/scripts/deps.ts",
    "compile": "(cd client; tsc -b); (cd server; tsc -b)",
    "watch": "(cd client; tsc -b -w) & (cd server; tsc -b -w)",
    "package": "yarn deps --release; yarn compile; vsce package"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.105.0",
    "commander": "^14.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "node-api-dotnet": "^0.9.17",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
